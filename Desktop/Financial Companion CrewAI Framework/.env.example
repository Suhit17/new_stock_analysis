
# .env
# Financial Companion CrewAI Framework - Environment Variables
# IMPORTANT: This file contains sensitive information - never commit to version control

# =============================================================================
# API KEYS (REQUIRED)
# =============================================================================

# Google Gemini API Key (Required for CrewAI LLM integration)
# Get your API key from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=AIzaSyAnsfcDrpsRy4ICmPO6eIHJ7zyDd-ie_oo

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Debug mode (set to True for development, False for production)
DEBUG=False

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Maximum number of API requests per minute
MAX_RPM=10

# Default analysis lookback period in months
DEFAULT_LOOKBACK_MONTHS=12

# Fraud detection analysis period in days
FRAUD_ANALYSIS_DAYS=30

# =============================================================================
# DATA PROCESSING SETTINGS
# =============================================================================

# Maximum file size for transaction data (in MB)
MAX_FILE_SIZE_MB=50

# Supported file formats (comma-separated)
SUPPORTED_FORMATS=csv,json

# Data validation strictness level (strict, moderate, lenient)
DATA_VALIDATION_LEVEL=strict

# =============================================================================
# SECURITY & COMPLIANCE
# =============================================================================

# Enable data encryption for sensitive fields (True/False)
ENABLE_DATA_ENCRYPTION=True

# PCI DSS compliance mode (True/False)
PCI_COMPLIANCE_MODE=True

# Data retention period in days (for temporary processing files)
DATA_RETENTION_DAYS=7

# Enable audit logging (True/False)
ENABLE_AUDIT_LOG=True

# =============================================================================
# FRAUD DETECTION SETTINGS
# =============================================================================

# Fraud detection sensitivity (low, medium, high)
FRAUD_DETECTION_SENSITIVITY=medium

# Minimum confidence threshold for fraud alerts (0.0 to 1.0)
FRAUD_CONFIDENCE_THRESHOLD=0.7

# Enable velocity checks (True/False)
ENABLE_VELOCITY_CHECKS=True

# Maximum transactions per hour before velocity alert
MAX_TRANSACTIONS_PER_HOUR=20

# =============================================================================
# FINANCIAL ANALYSIS SETTINGS
# =============================================================================

# Minimum transaction count for reliable analysis
MIN_TRANSACTION_COUNT=50

# Currency code for analysis
DEFAULT_CURRENCY=USD

# Enable seasonal analysis (True/False)
ENABLE_SEASONAL_ANALYSIS=True

# Financial health scoring model (basic, advanced)
HEALTH_SCORING_MODEL=advanced

# =============================================================================
# PRODUCT RECOMMENDATION SETTINGS
# =============================================================================

# Maximum number of product recommendations to generate
MAX_PRODUCT_RECOMMENDATIONS=5

# Enable risk-based product filtering (True/False)
ENABLE_RISK_FILTERING=True

# Product recommendation confidence threshold (0.0 to 1.0)
RECOMMENDATION_CONFIDENCE_THRESHOLD=0.6

# =============================================================================
# REPORT GENERATION SETTINGS
# =============================================================================

# Default report format (json, pdf, html, all)
DEFAULT_REPORT_FORMAT=all

# Enable customer-friendly language in reports (True/False)
ENABLE_SIMPLIFIED_LANGUAGE=True

# Include technical details in customer reports (True/False)
INCLUDE_TECHNICAL_DETAILS=False

# Report template theme (professional, friendly, minimal)
REPORT_THEME=professional

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================

# Use sample data for testing (True/False)
USE_SAMPLE_DATA=False

# Enable performance monitoring (True/False)
ENABLE_PERFORMANCE_MONITORING=True

# Test mode (disables actual API calls for testing)
TEST_MODE=False

# Mock fraud detection results for testing (True/False)
MOCK_FRAUD_DETECTION=False

